.author
    padding 3rem 0
    border-bottom 1px solid epsilon
    border-top 1px solid epsilon
    max-width 100%
    margin 9rem auto 0

    +mobile()
        text-align center

    +tablet()
        text-align center

    .author__picture
        width 90%
        border-radius 100%

        +mobile()
            width 33%

        +tablet()
            width 33%

    .author__name,
    .author__bio
        width 60%
        display inline-block

    .author__name
        font-size 1.5rem
        font-family fontSans
        font-weight 500
        margin 6px 0 0

    .author__bio
        font-family fontSans
        font-weight 300
        color gama
        font-size 1.3rem
        text-align justify
        line-height 1.5
        margin 0

        +mobile()
            margin 1rem 0
            text-align center

        +tablet()
            margin 1rem 0
            text-align center

    .author__share
        float right
        width 40%
        display inline
        text-align right
        position relative
        top -10px

        svg
            fill #fff
            position relative
            top 3px
            margin-right 4px

        .twitter, .facebook
            display inline
            vertical-align middle
            font-size 13px
            font-weight 700
            color #fff
            padding 6px 10px
            border-radius 3px
            margin-left 5px

        .twitter
            background #4fafed

        .facebook
            background #4361b3

    .author__left
        width 10%
        display inline-block

        +mobile()
            width 88%
            margin 0 auto 2rem
            display block

        +tablet()
            width 90%
            margin 0 auto 2rem
            display block

    .author__right
        width 89%
        display inline-block
        vertical-align top

        +mobile()
            display block
            width 88%
            margin 0 auto

        +mobile()
            display block
            width 90%
            margin 0 auto
