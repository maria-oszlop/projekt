.home, .blog
    margin-top 125px

    .home__header
        display block
        margin 0 auto
        text-align center

        img
            width 125px
            margin-bottom 25px
            border-radius 100%

        h1, h2
            margin 0

        h1
            font-size 4rem
            margin-bottom 13px

        h2
            font-size 1.85rem
            font-weight 100
            font-style normal
            color gama

            a
                font-weight 200

        .home__header-social
            margin-top 20px

            a
                margin 0 3px

    .home__sections
        border-top 1px solid epsilon
        margin-top 30px
        padding-top 50px

        .home__sections-single
            display block
            border-bottom 1px solid epsilon
            width 95%
            margin 0 auto

            a
                width 100%
                height 100%
                display block
                padding 30px 0

            &:last-child
                border 0

            h3
                margin 0
                width 75%
                font-weight 500

            aside
                position relative
                top 0px
                margin 0
                width 25%
                float right
                font-weight 300
                color gama
